{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/pages/WeChatScripts/**",
    "src/pages/Influencers/WeChatStatusTag.tsx",
    "src/pages/Influencers/AddWeChatModal.tsx",
    "src/pages/Influencers/BatchAddWeChatModal.tsx",
    "src/services/wechat.ts",
    "src/services/wechat-bridge.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}